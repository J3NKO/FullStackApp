@model List<FullStackApp.Models.Item>
@{

    ViewData["Title"] = "Index";

}

<h3>Index</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>

    </thead>

    <tbody>

        <!-- simple for loop which iterates over each Item from my desclared model above and displays in table -->
        @foreach (var item in Model) { 
        
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N2") £</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id">Edit</a>*@
                </td> 
            </tr>
        
        }


    </tbody>
</table>