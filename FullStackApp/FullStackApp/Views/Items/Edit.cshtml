@model FullStackApp.Models.Item
@{

    ViewData["Title"] = "Edit";

}
<h3>Edit an Item</h3>
<!-- This is a simple form view used to create db entries for my table, (points of learning here are definetley Tag Helpers!) -->
<form asp-action="Edit" method="post">

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>

    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price"></input>

    </div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>